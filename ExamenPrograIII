def limpiarPantalla():  # Comando para limpiar la consola
    print("   " * 25000000)


def pausarPantalla():  # Comando para hacer una pausa
    print("")
    print("\t\t\t\t\t", end="")
    os.system("pause")


def menuDelSistema():
