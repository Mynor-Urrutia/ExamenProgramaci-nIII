while valorIngreso != "7":
    limpiarPantalla()
    menuDelSistema()
    valorIngreso = str(input("\t\t\tIngrese una opción: "))
    if valorIngreso == "1":
        limpiarPantalla()
        opcionIngreso = "clientes"
        registroClientes()
        pausarPantalla()
    elif valorIngreso == "2":
