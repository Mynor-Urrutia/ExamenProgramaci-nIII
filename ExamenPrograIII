        listadoTemporal.append(str(diccionarioClientes[codigoCliente][0]) + "   " + (diccionarioClientes)[codigoCliente][1])
        for x in range(5):
            informacionProyecto = str(input("\t\t\tIngrese el " + listadoProyectos[x] + "del proyecto"))
            listadoTemporal.append(informacionProyecto)
        diccionarioTemporal = {codigoProyecto: listadoTemporal}
        diccionarioProyectos.update(diccionarioTemporal)


