    print("\t\t\t3) MOSTRAR DEPARTAMENTOS Y MUNICIPIOS")
    print("\t\t\t4) SALIDA DEL MENU")


def registroClientes():
    listadoTemporal = [];
    listadoDeClientesProyectos = ("nombre", "apellido", "dirección", "telefono")
    listadoProyectos = ("Nombre", "Fecha", "Dirección", "Estado")
    if (opcionIngreso) == "clientes":
        codigoCliente = input("\t\t\tInserte el codigo del cliente: ")
        for contadorcliente in range(4):
            informacionCliente = str(
                input("\t\t\tInserte el " + listadoDeClientesProyectos[contadorcliente] + " del cliente: "))
            listadoTemporal.append(informacionCliente)
        diccionarioTemporal = {codigoCliente: listadoTemporal}
        diccionarioClientes.update(diccionarioTemporal)



def registroProyectos():
